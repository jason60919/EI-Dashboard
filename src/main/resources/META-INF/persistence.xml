<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="DashboardPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.advantech.eipaas.dashboard.entities.AccountEntity</class>
        <class>com.advantech.eipaas.dashboard.entities.DashboardEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/wisepaas"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="dashboard"/>
            <property name="hibernate.connection.password" value="dashboard"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
